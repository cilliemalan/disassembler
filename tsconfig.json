{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */
    "incremental": true,
    "tsBuildInfoFile": "./.buildcache",
    "target": "es2017",
    "module": "commonjs",
    "lib": [
      "ESNext.WeakRef",
      "dom"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "noImplicitAny": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "declaration": true,
    "sourceMap": true,
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
}